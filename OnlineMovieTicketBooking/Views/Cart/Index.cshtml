@model IEnumerable<OnlineMovieTicketBooking.Models.Cart>

@{
    ViewData["Title"] = "Cart Details";
}

<h1>Cart Details</h1>
<form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SeatNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SeatNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieId)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="Cart">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    @if (ViewBag.count != 0)
    {
    <input type="submit" value="Proceed To CheckOut" asp-action="proceed" asp-controller="Cart"/>
    }
</div>
</form>
